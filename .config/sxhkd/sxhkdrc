super + c
    wezterm -e nvim

super + alt + s
   sh $HOME/.config/cat-configs/bin/utilities/screenshot.sh --menu

super + l
  sh $HOME/.scripts/change-layout-br
super + u
  sh $HOME/.scripts/change-layout-us

XF86AudioRaiseVolume 
    pamixer -i 5

XF86AudioLowerVolume
    pamixer -d 5

XF86AudioMute
    pamixer -t

XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5

ctrl + alt + t
    $HOME/Telegram/Telegram

super + a
    brave

super + p
    wezterm -e ranger

super + Return
    wezterm

super + r 
  sh ~/.config/cat-configs/bin/utilities/menu/launcher.sh drun

super + d
  sh ~/.config/cat-configs/bin/utilities/menu/launcher.sh run

super + w
  sh ~/.config/cat-configs/bin/utilities/menu/launcher.sh window

super + alt + q
    pkill -x polybar; bspc quit

super + m
    bspc desktop -l next

super + g
    bspc node -s biggest

super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

alt + {Left,Right}
    bspc desktop -f {prev,next}

shift + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

alt + {p,Tab,comma,period}
    bspc node -f @{parent,brother,first,second}

#super + {Left,Right}
#	bspc {node} -f last

super + {Right,Left}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

super + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 20,right 20 0}
    super + alt + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 +20,0 -20,+20 0}

# focus the next/previous desktop in the current monitor
super + {Left, Right}
    bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# dynamically increase and decrease gap size on a desktop
super + {minus,plus}
    bspc config -d focused window_gap "$(( $(bspc config -d focused window_gap) {+,-} 4))"

# next monitor 
alt + a
    bspc monitor -f next
